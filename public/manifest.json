{
    "name": "SchedulePicker",
    "version": "3.1.0",
    "manifest_version": 2,
    "description": "ガルーンの今日のスケジュール情報を取得して、kintoneスレッドなどに挿入するChrome拡張。ハッカソン2019",
    "icons": {
        "16": "icons/Artboard-n@2x.png",
        "48": "icons/Artboard-n@2x.png",
        "128": "icons/Artboard-n@2x.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "background",
        "contextMenus",
        "https://bozuman.cybozu.com/*",
        "https://bozuman.s.cybozu.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://bozuman.cybozu.com/*", "https://bozuman.s.cybozu.com/*"],
            "js": ["js/contentscript.js"]
        }
    ],
    "background": {
        "scripts": ["js/initialize.js", "js/userinput.js"]
    },
    "browser_action": {
        "default_title": "SchedulePicker",
        "default_popup": "popup.html"
    },
    "author": "Atsusuke Murata"
}
  