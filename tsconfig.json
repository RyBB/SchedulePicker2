{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "jsx": "react",
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "typeRoots": [ "node_modules/@types", "src/types" ],
        "types": ["@types/chrome"],
    },
    "exclude": [
        "node_modules"
    ]
}
