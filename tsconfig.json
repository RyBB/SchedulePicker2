{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "typeRoots": [ "node_modules/@types", "src/types" ],
        "types": ["@types/chrome"],
    },
    "exclude": [
        "node_modules"
    ]
}
